@using MTGCommanderDeckBuilderMVC.Models;

@model DeckPO
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Main.css">
</head>
<body>
    @if (TempData.ContainsKey("Message"))
    {
        <h5>@TempData["Message"]</h5>
    }
    <div class="row text-center">
        <h2>Create a Deck</h2>
    </div>
    @using (Html.BeginForm("Create", "Deck", FormMethod.Post))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.LabelFor(model => Model.DeckName)
                <div class="form-group">
                    @Html.TextBoxFor(model => Model.DeckName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.DeckName, "", new { @class = "label label-danger" })
                </div>
            </div>
            <div class="form-horizontal">
                @Html.LabelFor(model => Model.CommanderName)
                <div class="form-group">
                    @Html.TextBoxFor(model => Model.CommanderName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.CommanderName, "", new { @class = "label label-danger" })
                </div>
            </div>
            <div class="form-horizontal">
                @Html.LabelFor(model => Model.DeckColors)
                <div class="form-group">
                    @Html.TextBoxFor(model => Model.DeckColors, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.DeckColors, "", new { @class = "label label-danger" })
                </div>
            </div>
            <div class="form-horizontal">
                @Html.LabelFor(model => Model.DeckArchetype)
                <div class="form-group">
                    @Html.TextBoxFor(model => Model.DeckArchetype, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.DeckArchetype, "", new { @class = "label label-danger" })
                </div>
            </div>
            <input type="submit" value="Create Deck" />
        </div>
    }
</body>
